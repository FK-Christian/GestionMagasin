		<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/gestionmagasinbd</property>
		<property name="connection.username">root</property>
		<property name="connection.password">fossofodoup</property>
		<property name="show_sql">false</property>
		<property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
		<!-- mapping files -->
		<mapping resource="ormmapping/crud/Address.hbm.xml" />
		<mapping resource="ormmapping/crud/Categories.hbm.xml" />
		<mapping resource="ormmapping/crud/Charges.hbm.xml" />
		<mapping resource="ormmapping/crud/Client.hbm.xml" />
		<mapping resource="ormmapping/crud/Fournisseur.hbm.xml" />
		<mapping resource="ormmapping/crud/Grandecategorie.hbm.xml" />
		<mapping resource="ormmapping/crud/Produit.hbm.xml" />
		<mapping resource="ormmapping/crud/Produit_vente.hbm.xml" />
		<mapping resource="ormmapping/crud/Typeusers.hbm.xml" />
